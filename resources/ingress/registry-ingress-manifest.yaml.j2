---
apiVersion: cert-manager.io/v1alpha2
kind: Certificate
metadata:
  name: registry-{{ project_name }}-tls
  namespace: kube-system
spec:
  secretName: registry-{{ project_name }}-tls
  issuerRef:
    name: ca-{{ project_name }}-issuer
    kind: ClusterIssuer
  commonName: registry.{{ kube_domain_name }}
  organization:
  - {{ project_name }} CA
  dnsNames:
  - registry.{{ kube_domain_name }}
---
apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  namespace: kube-system
  name: registry-ingress
  annotations:
    kubernetes.io/ingress.class: "nginx"
    nginx.ingress.kubernetes.io/proxy-body-size: 2000m
    cert-manager.io/cluster-issuer: ca-{{ project_name }}-issuer
spec:
  tls:
  - hosts:
    - registry.{{ kube_domain_name }}
    secretName: registry-{{ project_name }}-tls
  rules:
  - host: registry.{{ kube_domain_name }}
    http:
      paths:
      - path: /
        backend:
          serviceName: registry
          servicePort: 5000